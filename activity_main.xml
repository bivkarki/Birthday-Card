<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">
<ImageView
    android:src="@drawable/bday"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:scaleType="centerCrop">

</ImageView>
    <TextView android:text="Happy Birthday"
    android:id="@+id/b"
    android:layout_width="match_parent"
        android:background="#ff3333"
    android:layout_height="wrap_content"
    android:textSize="50sp"
    android:textColor="#84FFFF"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true" />
    <TextView android:text="Ashish Chaudary"
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"

        android:textColor="#84FFFF"
        android:layout_below="@id/b"

    />

    <TextView android:text="\n Many Many happy returns of the day , Buddy!"
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="29sp"
        android:textColor="#ffff80"
        android:textStyle="italic"
        android:layout_below="@id/a"
        android:layout_centerHorizontal="true" />

    <TextView android:text="I pray to the God for your prosperity and good health"
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="29sp"
        android:textColor="#ffff80"
        android:textStyle="italic"
        android:layout_below="@id/d"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e"
        android:text="I also hope that this app may remind you of me and cherish smile on your face :) "
        android:textColor="#000"
        android:textSize="29sp"
        android:textStyle="italic" />

    <TextView android:text="From, "
        android:id="@+id/und"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textColor="#FFA500"
        android:fontFamily="sans-serif-light"
        android:layout_above="@id/f"
        android:paddingLeft="155dp"
        android:textStyle="bold"
        android:background="#71B9FF"
        />
    <TextView android:text="Bivek Karki"
        android:id="@+id/f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:textColor=" #70F45A"
        android:fontFamily="verdana"
        android:paddingLeft="180dp"
        android:paddingBottom="2dp"

        android:background="#71B9FF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>